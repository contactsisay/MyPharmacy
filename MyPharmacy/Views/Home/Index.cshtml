@inject IHttpContextAccessor _httpContextAccessor
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_UnAuthorizedLayout.cshtml";

}

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-navy">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>MyPharmacy</b>ERP</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">@ViewBag.Title</p>

            <form asp-action="Login" method="post">
                <div class="input-group mb-3">
                    <input type="email" name="emlAddress" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" name="passWrd" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-block btn-outline-dark btn-sm">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <p class="mb-1">
                <a href="#">I forgot my password</a>
            </p>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.login-box -->

<span class="display:none;" id="messageType">@TempData["MessageType"]</span>
<span class="display:none;" id="message">@TempData["Message"]</span>

@section Scripts{
    <script>
        $(function () {
            var messageType = document.getElementById("messageType").innerText;
            var message = document.getElementById("message").innerText;
            alert(messageType + " - " + message);
        });
    </script>
}