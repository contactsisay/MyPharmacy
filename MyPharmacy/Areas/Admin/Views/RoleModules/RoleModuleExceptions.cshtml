@model IEnumerable<BALibrary.Admin.RoleModuleException>
@using BALibrary.Admin

@{
    ViewData["Title"] = "Role Module Exceptions";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    RoleModule roleModule = ((List<RoleModule>
    )ViewData["RoleModules"])[0];
    List<string>
        tableNames = (List<string>
            )ViewData["TableNames"];

            int counter = 0;
            }

            <h4>@ViewData["Title"]</h4>

            <p>
                <!--<a class="btn btn-sm btn-flat btn-outline-danger" asp-action="Create" asp-route-id="@roleModule.Id">Create New Exceptions</a>&nbsp;&nbsp;-->
                <a asp-controller="RoleModules" asp-action="Index" asp-route-id="@roleModule.RoleId" class="btn btn-sm btn-outline-danger">Back to Role Modules</a>
            </p>

            <div class="row" style="border: 1px solid #0a1a48;">
                <div class="col-lg-3">
                    <label>Role Name</label><br />
                    <span>@roleModule.Role.Name</span>
                </div>
                <div class="col-lg-3">
                    <label>Module Name</label><br />
                    <span>@Html.Raw(Common.GetModuleText((Common.ModuleName)roleModule.ModuleId))</span>
                </div>
                <div class="col-lg-3">
                    <label>Status</label><br />
                    <span>@Html.Raw(roleModule.Status == 1 ? "ACTIVE" : "IN-ACTIVE")</span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12"><hr /></div>
            </div>

            <form asp-action="SaveRoleModuleExceptions" method="post">

                <div class="row">
                    <div class="col-lg-12">
                        <input type="hidden" name="roleModuleId" value="@Html.Raw(@roleModule.Id)" />

                        <div class="row" style="border:2px solid #000;">
                            <div class="col-lg-3"><strong>TABLE NAME</strong></div>
                            <div class="col-lg-5" style="text-align:center;">
                                <strong>ACCESS RIGHT</strong>
                                <div class="row" style="border:2px solid #000;">
                                    <div class="col-lg-3">BROWSE</div>
                                    <div class="col-lg-2">READ</div>
                                    <div class="col-lg-2">EDIT</div>
                                    <div class="col-lg-2">ADD</div>
                                    <div class="col-lg-3">DELETE</div>
                                </div>
                            </div>
                            <div class="col-lg-2" style="text-align:center;"><strong>FULLY GRANTED</strong></div>
                            <div class="col-lg-2" style="text-align:center;"><strong>FULLY DENIED</strong></div>
                        </div>

                        @foreach (string tableName in tableNames)
                        {
                            counter = counter + 1;
                            List<RoleModuleException> tableRoleModuleExceptions = Model.Where(trme => trme.TableName == tableName.ToUpper()).ToList();
                            if (tableRoleModuleExceptions.Count > 0)
                            {
                                foreach (RoleModuleException roleModuleException in Model)
                                {
                                    int row_counter = (roleModuleException.FullyGranted ? 5 : (roleModuleException.FullyDenied ? 0 : -1));

                                    if (tableName.ToUpper() == roleModuleException.TableName.ToString().ToUpper())
                                    {
                                        <div class="row" style="border-bottom:1px solid #000;">
                                            <div class="col-lg-3">@Html.Raw(counter + "-" + tableName.ToUpper())</div>
                                            <div class="col-lg-5" style="text-align:center;">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <input type="checkbox" name="@Html.Raw(tableName + "_b")" @Html.Raw((roleModuleException.Browse ? "checked='checked'" : "")) id="@Html.Raw("b_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                                    </div>
                                                    <div class="col-lg-2">
                                                        <input type="checkbox" name="@Html.Raw(tableName + "_r")" @Html.Raw((roleModuleException.Read ? "checked='checked'" : "")) id="@Html.Raw("r_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                                    </div>
                                                    <div class="col-lg-2">
                                                        <input type="checkbox" name="@Html.Raw(tableName + "_e")" @Html.Raw((roleModuleException.Edit ? "checked='checked'" : "")) id="@Html.Raw("e_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                                    </div>
                                                    <div class="col-lg-2">
                                                        <input type="checkbox" name="@Html.Raw(tableName + "_a")" @Html.Raw((roleModuleException.Add ? "checked='checked'" : "")) id="@Html.Raw("a_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                                    </div>
                                                    <div class="col-lg-3">
                                                        <input type="checkbox" name="@Html.Raw(tableName + "_d")" @Html.Raw((roleModuleException.Delete ? "checked='checked'" : "")) id="@Html.Raw("d_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-2" style="text-align:center;">
                                                <input type="radio" name="@Html.Raw(tableName + "_access")" id="@Html.Raw("fully_granted_" + counter)" @Html.Raw((roleModuleException.FullyGranted ? "checked='checked'" : "")) onchange="checkAll(this.id)" value="0" />
                                            </div>
                                            <div class="col-lg-2" style="text-align:center;">
                                                <input type="radio" name="@Html.Raw(tableName + "_access")" id="@Html.Raw("fully_denied_" + counter)" @Html.Raw((roleModuleException.FullyDenied ? "checked='checked'" : "")) onchange="unCheckAll(this.id)" value="1" />
                                                <input type="hidden" id="@Html.Raw("row_counter_" + counter)" value="@Html.Raw(row_counter)" />
                                            </div>
                                        </div>

                                        break;
                                    }
                                }
                            }
                            else
                            {
                                <div class="row" style="border-bottom:2px solid #000;background-color:bisque;">
                                    <div class="col-lg-3">@Html.Raw(counter + "-" + tableName.ToUpper() + " - (DEFAULT)")</div>
                                    <div class="col-lg-5" style="text-align:center;">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <input type="checkbox" name="@Html.Raw(tableName + "_b")" checked="checked" id="@Html.Raw("b_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                            </div>
                                            <div class="col-lg-2">
                                                <input type="checkbox" name="@Html.Raw(tableName + "_r")" checked="checked" id="@Html.Raw("r_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                            </div>
                                            <div class="col-lg-2">
                                                <input type="checkbox" name="@Html.Raw(tableName + "_e")" checked="checked" id="@Html.Raw("e_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                            </div>
                                            <div class="col-lg-2">
                                                <input type="checkbox" name="@Html.Raw(tableName + "_a")" checked="checked" id="@Html.Raw("a_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                            </div>
                                            <div class="col-lg-3">
                                                <input type="checkbox" name="@Html.Raw(tableName + "_d")" checked="checked" id="@Html.Raw("d_" + counter)" onchange="unCheckBothFullAccess(this.id)" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2" style="text-align:center;">
                                        <input type="radio" name="@Html.Raw(tableName + "_access")" id="@Html.Raw("fully_granted_" + counter)" checked="checked" onchange="checkAll(this.id)" value="0" />
                                    </div>
                                    <div class="col-lg-2" style="text-align:center;">
                                        <input type="radio" name="@Html.Raw(tableName + "_access")" id="@Html.Raw("fully_denied_" + counter)" onchange="unCheckAll(this.id)" value="1" />
                                        <input type="hidden" id="@Html.Raw("row_counter_" + counter)" value="5" />
                                    </div>
                                </div>
                            }
                        }

                        <div class="row" style="border:2px solid #000;">
                            <div class="col-lg-3"><strong>TABLE NAME</strong></div>
                            <div class="col-lg-5" style="text-align:center;">
                                <strong>ACCESS RIGHT</strong>
                                <div class="row" style="border:2px solid #000;">
                                    <div class="col-lg-3">BROWSE</div>
                                    <div class="col-lg-2">READ</div>
                                    <div class="col-lg-2">EDIT</div>
                                    <div class="col-lg-2">ADD</div>
                                    <div class="col-lg-3">DELETE</div>
                                </div>
                            </div>
                            <div class="col-lg-2" style="text-align:center;"><strong>FULLY GRANTED</strong></div>
                            <div class="col-lg-2" style="text-align:center;"><strong>FULLY DENIED</strong></div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">&nbsp;</div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <input type="submit" value="Save Changes" class="btn btn-sm btn-flat btn-outline-danger" />
                        <button class="btn btn-sm btn-flat btn-outline-dark">Cancel</button>
                    </div>
                </div>

            </form>
