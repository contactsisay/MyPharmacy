@model BALibrary.Purchase.PurchaseOrder

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Purchase/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Purchase Order</h4>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-4">
            <span>Product Batch Details</span>
            <div class="row">
                <div class="col-lg-3">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                </div>
                <div class="col-lg-3">
                    <label class="control-label">Batch No</label>
                    <input type="text" name="BatchNo" class="form-control" />
                </div>
                <div class="col-lg-3">
                    <label class="control-label">Best Before</label>
                    <input type="text" name="BestBefore" class="form-control" />
                </div>
                <div class="col-lg-3">
                    <label class="control-label">Manufactured Date</label>
                    <input type="date" name="ManufacturedDate" class="form-control date" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">&nbsp;</div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <label class="control-label">Expr. Date</label>
                    <input type="date" name="ExpirationDate" class="form-control date" />
                </div>
                <div class="col-lg-3">
                    <label class="control-label">Purchasing Price</label>
                    <input type="date" name="PurchasingPrice" class="form-control date" />
                </div>
                <div class="col-lg-3">
                    <label class="control-label">Selling Price</label>
                    <input type="date" name="PurchasingPrice" class="form-control date" />
                </div>
                <div class="col-lg-3">
                    <label class="control-label">Is Sellable?</label>
                    <input type="checkbox" name="IsSellable" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <span>Purchase Order Details</span>
            <div class="row">
                <div class="col-lg-3">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                </div>
                <div class="col-lg-3">
                    <label asp-for="RequiredAmount" class="control-label"></label>
                    <select asp-for="RequiredAmount" class="form-control" asp-items="ViewBag.RequiredAmount"></select>
                </div>
                <div class="col-lg-6">
                    <label asp-for="ApprovedAmount" class="control-label"></label>
                    <select asp-for="ApprovedAmount" class="form-control" asp-items="ViewBag.ApprovedAmount"></select>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <p>&nbsp;</p>
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to List</a>
        </div>
        <div class="col-lg-9">&nbsp;</div>
    </div>

</form>

